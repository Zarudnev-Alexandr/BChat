<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:background="#EEBF78"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <!-- Панель с кнопками внизу экрана -->
        <LinearLayout
            android:background="#ECCFA5"
            android:id="@+id/button_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/button1"

                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_profiler"
                android:onClick="onProfBtnClick"
                android:contentDescription="NULL"/>

            <ImageView
                android:id="@+id/button2"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="NULL"
                android:onClick="onChatsBtnClick"
                android:src="@drawable/ic_chats" />

            <ImageView
                android:id="@+id/button3"
                android:layout_width="90dp"
                android:layout_height="58dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:onClick="onAllUsersBtnClick"
                android:src="@drawable/ic_users"
                android:contentDescription="NULL"/>

            <ImageView
                android:id="@+id/button4"
                android:layout_width="70dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:onClick="onBootcampBtnClick"
                android:src="@drawable/ic_bootcamps"
                android:contentDescription="NULL"/>

        </LinearLayout>


        <FrameLayout
            android:background="#ECCFA5"
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/button_panel"
            android:layout_alignParentTop="true">
        </FrameLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>